<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controller.Reclamation.ReclamationEditFormController" spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-background-color: #f8f8f8;">
    <Text text="Modifier Reclamation" style="-fx-font-weight: bold; -fx-font-size: 24px; -fx-fill: #2a2a2a;"/>
    <TextField fx:id="subject" promptText="Subject" style="-fx-padding: 8;"/>
    <TextArea fx:id="description" promptText="Description" prefHeight="100.0" style="-fx-padding: 8;"/>
    <TextField fx:id="reportedUsername" promptText="Reported Username" style="-fx-padding: 8;"/>
    <ChoiceBox fx:id="typeReclamation" prefWidth="150.0" style="-fx-padding: 5;"/>
    <Button fx:id="uploadScreenshot" text="Upload Screenshot" onAction="#ajoutScreenshoot" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-padding: 10;"/>
    <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="250.0" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);"/>
    <HBox spacing="15" alignment="CENTER">
        <Button text="Update" onAction="#updateReclamation" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-padding: 10;"/>
        <Button text="Clear" onAction="#clear" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-padding: 10;"/>
    </HBox>
</VBox>
